{
    "env": {
        "browser": true,
        "es2021": true,
        "cypress/globals": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "18.2"
        }
    },
    "plugins": [
        "react",
        "cypress"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "react/jsx-no-target-blank": "off",
        "react/react-in-jsx-scope": "off"
    }
}
